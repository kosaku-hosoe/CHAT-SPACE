.flash-box
  .notice
    グループを作成しました
.rapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
          test
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            %a(href="test")
              %i.fa.fa-edit
          %li.side-header__box__menu__edit-user
            %a(href="test")
              %i.fa.fa-cog
    = render partial: 'groups'
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group 
          グループ名
        %ul.main-header__left-box__member-list
          Member：
          %li.main-header__left-box__member-list__member
            name
      %a(href="test")
        .main-header__edit-btn
          Edit
    = render partial: 'messages'
    .form
      = form_tag ({:multipart => true}) do
        .input-box
          %input.input-box__text(name ="message[content]" type="text" placeholder="type a message")/
          %label.input-box__image(for="message_image")
            %i.fa.fa-image
            %input#message_image.input-box__image__file(name="message[image]" type="file")/
        %input.submit-btn(type="submit" value="Send" )/
        
        
        